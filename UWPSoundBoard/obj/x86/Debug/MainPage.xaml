                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='8' Content="&#xE90B;"
                            Name="AllSongsMenu"
                            FontFamily="Segoe MDL2 Assets"
                                                      />
                        <TextBlock Text="My Songs"
                                   HorizontalAlignment="Center"
                                   Margin="8"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='7' Content="&#xE8D6;"
                            Name="GenresMenu"
                            FontFamily="Segoe MDL2 Assets"
                                                    />
                        <TextBlock Text="Genres"
                                   HorizontalAlignment="Center"
                                   Margin="8"/>
                    </StackPanel>
                    <RelativePanel Width="180">
                        <StackPanel Orientation="Horizontal">
                            <Button x:ConnectionId='6' Content="&#xEA55;"
                            Name="PlaylistMenu"
                            FontFamily="Segoe MDL2 Assets"
                                                      />
                            <TextBlock Text="Playlist"
                                   HorizontalAlignment="Center"
                                   Margin="8"/>
                        </StackPanel>
                        <Button x:ConnectionId='5' Content="&#xE948;"
                            Name="AddPlaylistButton"
                            FontFamily="Segoe MDL2 Assets"
                                                           
                            HorizontalAlignment="Right"
                            RelativePanel.AlignRightWithPanel="True"
                            RelativePanel.AlignVerticalCenterWithPanel="True"/>
                    </RelativePanel>
                    <Button x:ConnectionId='4' Content="&#xE948;"
                            Name="SingleAddPlaylistButton"
                            FontFamily="Segoe MDL2 Assets"
                                                                 
